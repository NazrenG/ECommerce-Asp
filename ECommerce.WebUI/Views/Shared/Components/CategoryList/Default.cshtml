@model CategoryViewModel
 
<section class="list-group">

	<a class="@(Model.CurrentCategory ==0 ? "list-group-item active" : "list-group-item")" href="../product/index?page=1&category=0" style="cursor:pointer;">All Category</a>


	@foreach (var i in Model.Categories)
	{
		var css = "list-group-item";

		if (Model.CurrentCategory == i.CategoryId)
		{
			css += " active";
		}
		<a class="@css" href="../product/index?page=1&category=@i.CategoryId" style="cursor:pointer;">@i.CategoryName</a>

	}
</section>